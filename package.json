    "concurrently": "^9.2.1",
    "drizzle-kit": "^0.31.9",
    "jsdom": "^27.4.0",
    "typescript": "^5.9.3",
    "vite": "^7.3.1",
    "vitest": "^3.2.4",
    "web-vitals": "^5.1.0"
  },
