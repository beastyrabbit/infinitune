{
  "extends": "./tsconfig.base.json",
  "include": [
    "apps/**/*.ts",
    "apps/**/*.tsx",
    "packages/**/*.ts",
    "packages/**/*.tsx",
    "scripts/**/*.ts"
  ],
  "exclude": ["**/node_modules", "**/dist"],
  "compilerOptions": {
    "jsx": "react-jsx",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "types": ["vite/client"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./apps/web/src/*"],
      "@infinitune/shared/*": ["./packages/shared/src/*"],
      "@infinitune/room-client/*": ["./packages/room-client/src/*"]
    }
  }
}
